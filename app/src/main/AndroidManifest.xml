<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ksiapi.myfirstapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ksiapi.myfirstapp.MainActivity" />
        </activity>
        <activity
            android:name=".Second_act"
            android:label="@string/title_activity_second_act"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ksiapi.myfirstapp.MainActivity" />
        </activity>
        <activity
            android:name=".Third_act"
            android:label="@string/title_activity_third_act"
            android:parentActivityName=".Second_act">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ksiapi.myfirstapp.Second_act" />
        </activity>
    </application>

</manifest>
